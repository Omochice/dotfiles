# focus window
cmd - h : deno run -A ~/.config/skhd/queries/focus-window.ts west
cmd - j : deno run -A ~/.config/skhd/queries/focus-window.ts south
cmd - k : deno run -A ~/.config/skhd/queries/focus-window.ts north
cmd - l : deno run -A ~/.config/skhd/queries/focus-window.ts east

# move window
shift + cmd - h : deno run -A ~/.config/skhd/queries/move-window.ts west
shift + cmd - j : deno run -A ~/.config/skhd/queries/move-window.ts south
shift + cmd - k : deno run -A ~/.config/skhd/queries/move-window.ts north
shift + cmd - l : deno run -A ~/.config/skhd/queries/move-window.ts east

# close window
shift + cmd - q : deno run -A ~/.config/skhd/queries/close-window.ts
# close space
shift + cmd + ctrl - q : yabai --message space --destroy

# virtual desktops
# focus desktop
cmd - 1 : deno run -A  ~/.config/skhd/queries/focus-space.ts 1
cmd - 2 : deno run -A  ~/.config/skhd/queries/focus-space.ts 2
cmd - 3 : deno run -A  ~/.config/skhd/queries/focus-space.ts 3
cmd - 4 : deno run -A  ~/.config/skhd/queries/focus-space.ts 4
cmd - 5 : deno run -A  ~/.config/skhd/queries/focus-space.ts 5
cmd - 6 : deno run -A  ~/.config/skhd/queries/focus-space.ts 6
cmd - 7 : deno run -A  ~/.config/skhd/queries/focus-space.ts 7
cmd - 8 : deno run -A  ~/.config/skhd/queries/focus-space.ts 8
cmd - 9 : deno run -A  ~/.config/skhd/queries/focus-space.ts 9

# move window to specified window
shift + cmd - 1 : deno run -A  ~/.config/skhd/queries/move-space.ts 1
shift + cmd - 2 : deno run -A  ~/.config/skhd/queries/move-space.ts 2
shift + cmd - 3 : deno run -A  ~/.config/skhd/queries/move-space.ts 3
shift + cmd - 4 : deno run -A  ~/.config/skhd/queries/move-space.ts 4
shift + cmd - 5 : deno run -A  ~/.config/skhd/queries/move-space.ts 5
shift + cmd - 6 : deno run -A  ~/.config/skhd/queries/move-space.ts 6
shift + cmd - 7 : deno run -A  ~/.config/skhd/queries/move-space.ts 7
shift + cmd - 8 : deno run -A  ~/.config/skhd/queries/move-space.ts 8
shift + cmd - 9 : deno run -A  ~/.config/skhd/queries/move-space.ts 9


# super+"=" does as same as <C-w>= on vim
cmd + shift - 0x1B : yabai --message space --balance

cmd - f : yabai --message window --toggle zoom-fullscreen
cmd + shift - space : yabai --message window --toggle float; yabai --message window --grid 12:12:1:1:10:10
cmd - space : yabai --message window --toggle split
