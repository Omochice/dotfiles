# focus window
cmd - h : yabai --message window --focus west  || yabai --message display --focus west
cmd - j : yabai --message window --focus south || yabai --message display --focus south
cmd - k : yabai --message window --focus north || yabai --message display --focus north
cmd - l : yabai --message window --focus east  || yabai --message display --focus east

# move window
shift + cmd - h : if not yabai --message window --swap west ; yabai -m window --display west ; yabai -m display --focus west ; end
shift + cmd - j : if not yabai --message window --swap south; yabai -m window --display south; yabai -m display --focus south; end
shift + cmd - k : if not yabai --message window --swap north; yabai -m window --display north; yabai -m display --focus north; end
shift + cmd - l : if not yabai --message window --swap east ; yabai -m window --display east ; yabai -m display --focus east ; end

# close window
shift + cmd - q : yabai --message window --close | yabai --message query --spaces --space | jq '.["first-window"]' | xargs yabai --message window --focus
# close space
shift + cmd + ctrl - q : yabai --message space --destroy

# virtual desktops
# TODO: if not exists desctop, create it.
# focus desktop
cmd - 1 : if yabai --message space --focus 1; then; yabai --message query --windows --space 1 | jq '[.[] | select(.["is-visible"] == true and .["is-hidden"] == false and .["is-minimized"] == false and .["is-sticky"] == false)] | .[0].id' | xargs yabai --message window --focus; else; yabai --message space --create; yabai --message query --spaces | jq .[-1].index | xargs yabai --message space --focus; fi
cmd - 2 : if yabai --message space --focus 2; then; yabai --message query --windows --space 2 | jq '[.[] | select(.["is-visible"] == true and .["is-hidden"] == false and .["is-minimized"] == false and .["is-sticky"] == false)] | .[0].id' | xargs yabai --message window --focus; else; yabai --message space --create; yabai --message query --spaces | jq .[-1].index | xargs yabai --message space --focus; fi
cmd - 3 : if yabai --message space --focus 3; then; yabai --message query --windows --space 3 | jq '[.[] | select(.["is-visible"] == true and .["is-hidden"] == false and .["is-minimized"] == false and .["is-sticky"] == false)] | .[0].id' | xargs yabai --message window --focus; else; yabai --message space --create; yabai --message query --spaces | jq .[-1].index | xargs yabai --message space --focus; fi
cmd - 4 : if yabai --message space --focus 4; then; yabai --message query --windows --space 4 | jq '[.[] | select(.["is-visible"] == true and .["is-hidden"] == false and .["is-minimized"] == false and .["is-sticky"] == false)] | .[0].id' | xargs yabai --message window --focus; else; yabai --message space --create; yabai --message query --spaces | jq .[-1].index | xargs yabai --message space --focus; fi
