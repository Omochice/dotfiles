# focus window
cmd - h : yabai --message window --focus west || yabai --message display --focus west
cmd - j : yabai --message window --focus south || yabai --message display --focus south
cmd - k : yabai --message window --focus north || yabai --message display --focus north
cmd - l : yabai --message window --focus east || yabai --message display --focus east

# move window
shift + cmd - h : yabai --message window --warp west
shift + cmd - j : yabai --message window --warp south
shift + cmd - k : yabai --message window --warp north
shift + cmd - l : yabai --message window --warp east

cmd + shift - q : yabai --message window --close

# virtual desktops
cmd - 1 : yabai --message display --focus 1
cmd - 2 : yabai --message display --focus 2
# cmd - 3 : yabai --message space --display 3
# cmd - 4 : yabai --message space --display 4
# cmd - 5 : yabai --message space --display 5
# cmd - 6 : yabai --message space --display 6
# cmd - 7 : yabai --message space --display 7
# cmd - 8 : yabai --message space --display 8
# cmd - 9 : yabai --message space --display 9

cmd + shift - 1 : yabai --message window --display 1; yabai --message display --focus 1
cmd + shift - 2 : yabai --message window --display 2; yabai --message display --focus 2

cmd - f : yabai --message window --toggle zoom-fullscreen
cmd + shift - space : yabai --message window --toggle float; yabai --message window --grid 12:12:1:1:10:10
cmd - space : yabai --message window --toggle split

# launch apps
cmd - return : open -a $HOME/.local/bin/wezterm
cmd - w : open --new -a "vivaldi"
