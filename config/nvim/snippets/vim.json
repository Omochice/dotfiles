{
  "if": {
    "prefix": "if",
    "body": [
      "if ${1:condition}",
      "\t${2:body}",
      "endif"
    ],
    "description": "if statement"
  },
  "for": {
    "prefix": "for",
    "body": [
      "for s:${1:i} in ${2:loop}",
      "\t${3:body}",
      "endfor"
    ],
    "description": "for statement"
  },
  "for-range": {
    "prefix": "forr",
    "body": [
      "for s:${1:i} in range(${2:start}, ${3:end})",
      "\t${4:body}",
      "endfor"
    ],
    "description": "for range statement"
  },
  "function": {
    "prefix": "function",
    "body": [
      "function! ${1:name}(${2:arg}) abort",
      "\t${3:body}",
      "endfunction"
    ],
    "description": "description"
  }
}
