  inoremap <expr> " <SID>is_pre('"') ? '"' : '""<C-o>h'
  inoremap <expr> ' <SID>is_pre("'") ? '"' : "''\<C-o>h"
  inoremap ( ()<C-o>h
  inoremap [ []<C-o>h
  inoremap { {}<C-o>h
  silent! colorscheme habamax
endif

