{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "github>Omochice/personal-renovate-config#v1.11.1",
    "github>Omochice/renovate-config:deno#v4.1.0",
    "github>Omochice/personal-renovate-config:mise#v1.11.1",
    "customManagers:biomeVersions",
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true,
    schedule: [
      "before 3:00am",
    ],
  },
  nix: {
    enabled: true,
  },
  "github-actions": {
    managerFilePatterns: [
      "/^(workflow-templates|\\.(?:github|gitea|forgejo)/workflows)/[^/]+\\.ya?ml$/",
      "/(^|/)action\\.ya?ml$/",
      "config/nvim/templates/yaml/base-github*",
    ],
  },
}
