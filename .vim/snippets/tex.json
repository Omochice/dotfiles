{
  "itemize": {
    "prefix": "itemize",
    "body": [
      "\\begin{itemize}",
      "\t\\item $1",
      "\\end{itemize}"
    ],
    "description": "list items"
  },
  "enumerate": {
    "prefix": "enumerate",
    "body": [
      "\\begin{enumerate}",
      "\t\\item $1",
      "\\end{enumerate}"
    ],
    "description": "enumerate items"
  },
  "figure": {
    "prefix": "figure",
    "body": [
      "\\begin{figure}[hbtp]",
      "\t\\centering",
      "\t\\includegraphics[width=\\linewidth]{${1:path}}",
      "\t\\caption{${2:caption}}",
      "\t\\label{fig:${3:label-name}}",
      "\\end{figure}"
    ],
    "description": "simple figure snippet"
  }
}
